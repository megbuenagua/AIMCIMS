<h1>Savings Monitoring</h1>

<%= link_to 'New Saving', new_saving_path %>
<br/><%= link_to 'Home', welcome_index_path %>
<br/>
<br/> 

<%= form_tag("/savings/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %> By:
  <%= select_tag :r, options_for_select(["lastname", "member number"], " ")%>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3" >Member</th>
      <th >Gender</th>
     <th >Membership Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member.each do |saving| %>
      <tr>
        <td><%= saving.fullname%></td>

        <td colspan="3"><%= saving.gender %></td>
        <td colspan="4"><%= saving.membership_type %></td>
        
      
     <td><%= link_to 'Member Savings', savings_member_path(:member_id => saving.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


