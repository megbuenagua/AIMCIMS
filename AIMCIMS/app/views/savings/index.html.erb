<h1>Savings Monitoring</h1>

<%= link_to 'New Saving', new_saving_path %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/> 

<%= form_tag("/savings/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %> By:
  <%= select_tag :r, options_for_select([ " ","lastname", "member_number"], " ")%>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th >Member Number</th>
      <th >Name</th>
      <th colspan="5">Date and time</th>
      <th >Amount</th>
      <th colspan="3">OR number</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @savings.each do |saving| %>
      <tr>
        <td><%= saving.member_id %></td>
        <td><%= saving.member_number %></td>
		<td><%= saving.lastname %></td>
        <td><%= saving.firstname %></td>       
        <td colspan="3"><%= saving.date_time %></td>
        <td colspan="4"><%= saving.amount %></td>
        <td><%= saving.ornumber %></td>
      
        <td><%= link_to 'Show', saving %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving) %></td>
        <td><%= link_to 'Destroy', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


