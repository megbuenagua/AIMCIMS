<h1>Savings Monitoring</h1>

  <strong><%= @memberName.fullname %></strong></br>

<br/><br/><%= link_to 'New Saving', new_saving_path %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/> 

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th colspan="5">Date and time</th>
      <th >Amount</th>
      <th colspan="3">OR number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member.each do |saving| %>
      <tr>
        <td><%= saving.amount%></td>
        <td colspan="3"><%= saving.date_time %></td>
        <td colspan="4"><%= saving.ornumber %></td>
      
        <td><%= link_to 'Show', saving %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving) %></td>
        <td><%= link_to 'Destroy', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
    
  </tbody>
</table>

<br>


