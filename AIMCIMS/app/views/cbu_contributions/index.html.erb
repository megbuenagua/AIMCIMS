<h1>Capital Build Up Payments</h1>

<%= link_to 'New Cbu contribution', new_cbu_contribution_path %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/>
<table>
  <thead>
    <tr>
      <th>Memberid</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Ornumber</th>
      <th>Staffid</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cbu_contributions.each do |cbu_contribution| %>
      <tr>
        <td><%= cbu_contribution.member_id %></td>
        <td><%= cbu_contribution.payment_date %></td>
        <td><%= cbu_contribution.amount %></td>
        <td><%= cbu_contribution.ornumber %></td>
        <td><%= cbu_contribution.staff_id %></td>
        <td><%= cbu_contribution.remarks %></td>
        <td><%= link_to 'Show', cbu_contribution %></td>
        <td><%= link_to 'Edit', edit_cbu_contribution_path(cbu_contribution) %></td>
        <td><%= link_to 'Destroy', cbu_contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

