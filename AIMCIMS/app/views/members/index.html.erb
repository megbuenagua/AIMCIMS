<h1>Listing members</h1>

<%= link_to 'New Member', new_member_path %>
<br/><%= link_to 'Savings', savings_path %>
<br/><%= link_to 'Withdrawals', withdrawals_path %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/> 

 
<table>
  <thead>
    <tr>
      <th>Memberid</th>
      <th>Firstname</th>
      <th>Middlename</th>
      <th>Lastname</th>
      <th>Gender</th>
      <th>Birthdate</th>
         
      <th>Civilsatus</th>
      
      <th>Membershiptype</th>
      <th>Dateapproved</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

<% form_tag("/search", method: "get") do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.memberId %></td>
        <td><%= member.firstname %></td>
        <td><%= member.middlename %></td>
        <td><%= member.lastname %></td>
        <td><%= member.gender %></td>
        <td><%= member.birthdate %></td>
        
        <td><%= member.civilSatus %></td>
       
        <td><%= member.membershipType %></td>
        <td><%= member.dateApproved %></td>
        
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

