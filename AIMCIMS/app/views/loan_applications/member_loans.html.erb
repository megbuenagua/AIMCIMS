<h1>Loans Monitoring</h1></br>

<strong><%= @memberName.fullname %></strong></br></br>

<%= link_to 'New Loan', new_loan_application_path %>
<br/><%= link_to 'Home', welcome_index_path %>
<br/>
<br/> 

<table>
  <thead>
    <tr>
    <th>Loan ID |</th>
      <th>Loan Type |</th>
      <th colspan="5">Loaned Amount |</th>
      <th> Date Approved |</th>
      <th> Terms of Payment |</th>
      <th> Total Paid Amount |</th>
      <th colspan="3">Percentage of Payment |</th>
      <th colspan="3">Status</th>
    </tr>
  </thead>

  <tbody>
    <% @loan.each do |loans| %>
      <tr>
      <td colspan="1"><%= loans.id%>//</td>
        <td colspan="1"><%= loans.loan_type_id%> //</td>
        <td colspan="3"><%= loans.loan_amount %> //</td>
        <td colspan="3"><%= loans.date_approved%> //</td>
		<td colspan="3"><%= loans.term_of_payment%> //</td>        
 	    <td><%= link_to 'View Payments', loan_applications_payment_path(:loan_id => loans.id) %></td>
		<td><%= link_to 'Show', loans %></td>
        <td><%= link_to 'Edit', edit_loan_application_path(loans) %></td>
        <td><%= link_to 'Destroy', loans, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	</tr>
    <% end %>

    
  </tbody>
</table>

<br>


