<h1>Loan Management</h1>

<%= link_to 'Loan Types', loan_types_path %><br/>
<%= link_to 'New Loan application', new_loan_application_path %><br/>
<%= link_to 'Loan Payments', loan_payments_path %><br/>
<%= link_to 'Comaker', co_makers_path %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/>

<%= form_tag("/loan_applications/search", method: "get") do %>
  <%= label_tag(:l, "Search for:") %>
  <%= text_field_tag(:l) %> By:
   <%= select_tag :r, options_for_select([ " ","lastname","member_number", "loan_type", "application_status"], " ")%>
  <%= submit_tag("Search") %>
<% end %>
  
<table>
  <thead>
    <tr>
      <th>LT.ID</th>
      <th>Loan type</th>
      <th>M.ID</th>
      <th>Member Number</th>
       <th>Member Name</th>
      <th>Date Filed</th>
      <th>Application Status</th>
      <th>Date Approved</th>
      <th>Date Released</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loan_applications.each do |loan_application| %>
      <tr>
        <td><%= loan_application.loan_type_id%> </td>
        <td><%= loan_application.loan_name%> </td>
        <td><%= loan_application.member_id %></td>
        <td><%= loan_application.member_number %></td>
        <td><%= loan_application.lastname %></td>
        <td><%= loan_application.date_filed %></td>
         <td><%= loan_application.application_status %></td>
        <td><%= loan_application.date_approved %></td>
        <td><%= loan_application.date_released %></td>
       
        <td><%= link_to 'Show', loan_application %></td>
        <td><%= link_to 'Edit', edit_loan_application_path(loan_application) %></td>
        <td><%= link_to 'Destroy', loan_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

