<h1>List of CBU contributions</h1>
<strong><%= @memberName %></strong></br>

<%= link_to 'Add Payment', new_cbu_contribution_path(:cbu_id => params[:cbu_id]) %>
<br/><%= link_to 'Home', root_path %>
<br/>
<br/>

<table>
  <thead>
    <tr>
	  <th>CBU Id</th>
      <th>Amount</th>
      <th>Payment date</th>
        <th>OR number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment.each do |cbu_payment| %>
      <tr>
        <td><%= cbu_payment.cbu_id %></td>
        <td><%= cbu_payment.amount %></td>
        <td><%= loan_payment.payment_date %></td>
        <td><%= loan_payment.ornumber %></td>
        <td><%= link_to 'Show', loan_payment %></td>
        <td><%= link_to 'Edit', edit_loan_payment_path(loan_payment) %></td>
        <td><%= link_to 'Destroy', loan_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>