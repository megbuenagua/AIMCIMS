<h1>Capital Buid Up</h1>

<%= link_to 'Add New Capital build up', new_capital_build_up_path %>

<br/><%= link_to 'Home', welcome_index_path %>
<br/>
<br/>

<%= form_tag("/capital_build_ups/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %> By:
   <%= select_tag :r, options_for_select([ " ","lastname","member number"], " ")%>
  <%= submit_tag("Search") %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Member Number</th>
      <th>Member Name</th>
	  <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member.each do |capital_build_up| %>
      <tr>
        
        <td><%= capital_build_up.member_number %></td>
        <td><%= capital_build_up.fullname %></td>
		<td><%= link_to 'Member CBU', capital_build_ups_member_path(:member_id => capital_build_up.id) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

