      <h2><%= pluralize(@loan_payment.errors.count, "error") %> prohibited this loan_payment from being saved:</h2>

      <ul>
      <% @loan_payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <label>Member ID:</label><br/>
    <div class="controls">
  		<%= collection_select( :loan_payment, :member_id, Member.all, :id, :fullname, {:include_blank => true} ) %>
	</div>
  </div> 
  
  <div class="field">
    <label>Loan:</label><br/>
    <div class="controls">
  		<%= collection_select( :loan_payment, :id, LoanType.all, :id, :loan_name, {:include_blank => true} ) %>
	</div>
  </div>
  
  <div class="field">
   <label>Payment Date:</label><br/>
    <%= f.date_select :payment_date %>
  </div>
  <div class="field">
    <label>Amount:</label><br/>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <label>OR Number:</label><br/>
    <%= f.text_field :ornumber %>
  </div>
  <div class="field">
   <label>Staff ID:</label><br/>
    <%= f.number_field :staff_id %>
  </div>
  <div class="field">
    <%= f.label :remarks %><br>
    <%= f.text_area :remarks %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
