<h1>Loan Types</h1>

<%= link_to 'Add New Loan type', new_loan_type_path %><br/>
<%= link_to 'Home', root_path %>
<br/>
<br/>

<table>
  <thead>
    <tr>
      <th>Loan Name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loan_types.each do |loan_type| %>
      <tr>
        <td><%= loan_type.loan_name %></td>
       
        <td><%= link_to 'Show', loan_type %></td>
        <td><%= link_to 'Edit', edit_loan_type_path(loan_type) %></td>
        <td><%= link_to 'Destroy', loan_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

