<%= form_for(@withdrawal) do |f| %>
  <% if @withdrawal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@withdrawal.errors.count, "error") %> prohibited this withdrawal from being saved:</h2>

      <ul>
      <% @withdrawal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
  	<%=f.label :member, class: 'control-group' %>
  		<div class="controls">
  			<%= collection_select( :withdrawal, :memberId, Member.all, :id, :fullname, {:include_blank => true} ) %>
		</div>
	</div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  
  <div class="field">
    <label>OR Number:</label><br/>
    <%= f.text_field :orNumber %>
  </div>
 
  <div class="control-group">
  	<%=f.label :staff, class: 'control-group' %>
  		<div class="controls">
  			<%= collection_select( :withdrawal, :staffId, AdminStaff.all, :id, :name, {:include_blank => true} ) %></br></br>
		</div>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
