<%= form_for(@admin_staff) do |f| %>
  <% if @admin_staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_staff.errors.count, "error") %> prohibited this admin_staff from being saved:</h2>

      <ul>
      <% @admin_staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Staff ID:</label><br/>
    <%= f.number_field :staff_number, readonly:true %>
  </div>
  <div class="field">
    <%= f.label :staff_name %><br>
    <%= f.text_field :staff_name %>
  </div>
  <div class="field">
   <label>Birthday(MM/DD/YYYY):</label><br/>
    <%= f.text_field :birthday  %>
  </div>
  <div class="field">
   <label>Date Hired</label><br/>
    <%= f.date_select(:date_hired, start_year: 2010) %>
  </div>
  <div class="field">
  	<label>Position:</label><br/>
    <%= f.radio_button(:staff_position, "BOD") %>
	<%= f.label(:p_B, "Board of Director") %>
	<%= f.radio_button(:staff_position, "Manager") %>
	<%= f.label(:p_M, "Manager") %>
	<%= f.radio_button(:staff_position, "Staff") %>
	<%= f.label(:p_S, "Staff") %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
