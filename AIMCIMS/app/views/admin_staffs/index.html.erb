<h1>Staff and Administrator's Account</h1>

<%= link_to 'New Admin staff', new_admin_staff_path %>
<br/><%= link_to 'Login Accounts', login_accounts_path %>
<br/><%= link_to 'Home', welcome_index_path %>

<table>
  <thead>
    <tr>
      <th>Staff ID</th>
      <th>Name</th>
      <th>Date Hired</th>
      <th>Position</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_staffs.each do |admin_staff| %>
      <tr>
        <td><%= admin_staff.staff_number %></td>
        <td><%= admin_staff.staff_name %></td>
        <td><%= admin_staff.date_hired %></td>
        <td><%= admin_staff.staff_position %></td>
        <td><%= admin_staff.status %></td>
        <td><%= link_to 'Show', admin_staff %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(admin_staff) %></td>
        <td><%= link_to 'Destroy', admin_staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

